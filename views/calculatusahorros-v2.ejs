    <script>
        // Gas prices for Mexico
        const gasPrices = {
            magna: 23.76,
            premium: 25.52
        };
        
        // Vehicle data
        const electricVehicles = {
            dolphin: {
                name: 'BYD Dolphin',
                price: 'Desde $458,800',
                range: 405,
                consumption: 13.5,
                image: '/images/byd/byd-auto-dolphin_auto_electrico_BYD.png'
            },
            atto3: {
                name: 'BYD Atto 3',
                price: 'Desde $598,800',
                range: 420,
                consumption: 16.6,
                image: '/images/byd/byd-atto-3-1-transformed.png'
            },
            seal: {
                name: 'BYD Seal',
                price: 'Desde $888,800',
                range: 460,
                consumption: 15.4,
                image: '/images/byd/byd-auto-seal_auto_electrico_BYD.png'
            }
        };
        
        const hybridVehicles = {
            dmi: {
                name: 'BYD Song Plus DM-i',
                price: 'Desde $768,800',
                electricRange: 110,
                fuelConsumption: 4.4,
                image: '/images/byd/byd-dmi-song-plus.png'
            }
        };
        
        let selectedType = '';
        let calculationData = {};
        
        function selectVehicleType(type) {
            selectedType = type;
            
            // Update UI
            document.querySelectorAll('.vehicle-card').forEach(card => {
                card.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected', 'bounce-in');
            
            // Update progress
            updateProgress(2);
            
            // Show next step
            setTimeout(() => {
                document.getElementById('vehicleTypeStep').style.display = 'none';
                document.getElementById('consumptionStep').style.display = 'block';
                document.getElementById('consumptionStep').classList.add('bounce-in');
                
                // Initialize calculation
                updateLiveCalculation();
            }, 300);
        }
        
        function updateProgress(step) {
            // Update progress indicators
            for (let i = 1; i <= 3; i++) {
                const stepEl = document.getElementById(`step${i}`);
                stepEl.classList.remove('active', 'completed');
                
                if (i < step) {
                    stepEl.classList.add('completed');
                } else if (i === step) {
                    stepEl.classList.add('active');
                }
            }
        }
        
        function updateLiveCalculation() {
            const weeklySpending = parseFloat(document.getElementById('weeklyGasSpending').value) || 1000;
            const dailyKm = parseFloat(document.getElementById('dailyKm').value) || 40;
            const currentConsumption = parseFloat(document.getElementById('currentVehicleType').value) || 12;
            const gasType = document.getElementById('gasType').value;
            const homeElectricity = parseFloat(document.getElementById('homeElectricity').value) || 300;
            
            // Calculate current monthly gas spending
            const monthlyGasSpending = weeklySpending * 4.33; // Average weeks per month
            const yearlyGasSpending = weeklySpending * 52;
            
            // Calculate liters and km
            const gasPrice = gasPrices[gasType];
            const weeklyLiters = weeklySpending / gasPrice;
            const weeklyKm = weeklyLiters * currentConsumption;
            const yearlyKm = weeklyKm * 52;
            
            // Store calculation data
            calculationData = {
                weeklySpending,
                monthlyGasSpending,
                yearlyGasSpending,
                dailyKm,
                yearlyKm,
                currentConsumption,
                gasType,
                gasPrice,
                homeElectricity
            };
            
            // Update live preview
            const savingsElement = document.getElementById('monthlySavingsPreview');
            const liveCalcElement = document.getElementById('liveCalc');
            
            if (weeklySpending > 0) {
                // Estimate savings (rough calculation for preview)
                const estimatedMonthlySavings = monthlyGasSpending * 0.75; // Assume 75% savings
                
                savingsElement.textContent = `$${Math.round(estimatedMonthlySavings).toLocaleString()}`;
                savingsElement.classList.add('visible');
                liveCalcElement.classList.add('has-data');
                
                // Update comparison bars
                document.getElementById('currentMonthlyGas').textContent = `$${Math.round(monthlyGasSpending).toLocaleString()}`;
                document.getElementById('bydMonthlyCost').textContent = `$${Math.round(monthlyGasSpending * 0.25).toLocaleString()}`;
                
                document.getElementById('comparisonBars').style.display = 'block';
                document.getElementById('benefitsList').style.display = 'block';
                document.getElementById('ctaButton').style.display = 'block';
                
                // Animate bars
                setTimeout(() => {
                    document.getElementById('currentBar').style.width = '100%';
                    document.getElementById('bydBar').style.width = '25%';
                }, 100);
            }
        }
        
        function showModels() {
            updateProgress(3);
            
            document.getElementById('consumptionStep').style.display = 'none';
            document.getElementById('modelsStep').style.display = 'block';
            document.getElementById('modelsStep').classList.add('bounce-in');
            
            // Load models based on vehicle type
            const vehicles = selectedType === 'electric' ? electricVehicles : hybridVehicles;
            const modelsList = document.getElementById('modelsList');
            modelsList.innerHTML = '';
            
            Object.entries(vehicles).forEach(([key, vehicle]) => {
                const monthlyGasSpending = calculationData.monthlyGasSpending;
                const estimatedSavings = Math.round(monthlyGasSpending * 0.75);
                
                const modelCard = document.createElement('div');
                modelCard.className = 'vehicle-card mb-3';
                modelCard.innerHTML = `
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <img src="${vehicle.image}" alt="${vehicle.name}" class="img-fluid">
                        </div>
                        <div class="col-md-8">
                            <h4>${vehicle.name}</h4>
                            <p class="text-muted mb-2">${vehicle.price}</p>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Autonomía: ${vehicle.range || vehicle.electricRange} km</span>
                                <span class="text-success fw-bold">Ahorro: $${estimatedSavings.toLocaleString()}/mes</span>
                            </div>
                            <button class="btn btn-success w-100" onclick="selectModel('${key}', '${selectedType}')">
                                Ver detalles completos
                            </button>
                        </div>
                    </div>
                `;
                modelsList.appendChild(modelCard);
            });
        }
        
        function selectModel(modelKey, type) {
            // Get detailed calculation from server
            const formData = {
                vehicleType: type,
                vehicleName: modelKey,
                calculationMode: 'spending',
                weeklySpending: calculationData.weeklySpending,
                gasType: calculationData.gasType,
                homeConsumption: calculationData.homeElectricity,
                estimatedConsumption: calculationData.currentConsumption
            };
            
            fetch('/api/calculate-savings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(result => {
                // Trigger celebration
                launchConfetti();
                
                // Show detailed results
                showDetailedResults(result, modelKey, type);
            });
        }
        
        function showDetailedResults(result, modelKey, type) {
            const vehicle = type === 'electric' ? electricVehicles[modelKey] : hybridVehicles[modelKey];
            
            // Update final savings display
            const savingsElement = document.getElementById('monthlySavingsPreview');
            savingsElement.textContent = `$${Math.round(result.monthlySavings).toLocaleString()}`;
            savingsElement.classList.add('bounce-in');
            
            // Show success message
            const modelCard = event.currentTarget.closest('.vehicle-card');
            modelCard.classList.add('selected');
            
            // Update WhatsApp message
            const message = encodeURIComponent(
                `¡Hola! Me interesa el ${vehicle.name}. ` +
                `Según la calculadora, podría ahorrar $${Math.round(result.monthlySavings).toLocaleString()} al mes. ` +
                `¿Podrías darme más información y una cotización?`
            );
            document.getElementById('whatsappFloat').href = `https://wa.me/528120272752?text=${message}`;
        }
        
        function launchConfetti() {
            const duration = 3 * 1000;
            const animationEnd = Date.now() + duration;
            const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };
            
            function randomInRange(min, max) {
                return Math.random() * (max - min) + min;
            }
            
            const interval = setInterval(function() {
                const timeLeft = animationEnd - Date.now();
                
                if (timeLeft <= 0) {
                    return clearInterval(interval);
                }
                
                const particleCount = 50 * (timeLeft / duration);
                confetti(Object.assign({}, defaults, {
                    particleCount,
                    origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 }
                }));
                confetti(Object.assign({}, defaults, {
                    particleCount,
                    origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 }
                }));
            }, 250);
        }
        
        function contactWhatsApp() {
            const message = encodeURIComponent(
                `¡Hola! Acabo de usar la calculadora de ahorros BYD. ` +
                `Mi gasto semanal en gasolina es de $${calculationData.weeklySpending}. ` +
                `Me gustaría recibir más información sobre los vehículos ${selectedType === 'electric' ? 'eléctricos' : 'híbridos'} BYD.`
            );
            window.open(`https://wa.me/528120272752?text=${message}`, '_blank');
        }
        
        // Input validation and formatting
        document.getElementById('weeklyGasSpending').addEventListener('input', function() {
            if (this.value) {
                this.classList.add('has-value');
            } else {
                this.classList.remove('has-value');
            }
        });
        
        // Initialize on load
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth scrolling
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
