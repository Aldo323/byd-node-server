</head>
<body>
    <!-- Header -->
    <header class="header-main">
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/images/byd/BYD-Logo.png" alt="BYD Logo" class="logo" loading="lazy">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#inicio">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" href="#vehiculos">Vehículos</a></li>
                        <li class="nav-item"><a class="nav-link" href="/calculatusahorros">Calculadora</a></li>
                        <li class="nav-item"><a class="nav-link" href="#testimonios">Testimonios</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contacto">Contacto</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section id="inicio" class="hero-section">
        <div class="hero-overlay"></div>
        <div class="electric-grid"></div>
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6 hero-content">
                    <h1 class="display-3 fw-bold text-white mb-4">BYD Monterrey - Autos Eléctricos del Futuro</h1>
                    <p class="lead text-white mb-5">Descubre la nueva generación de vehículos BYD. Tecnología avanzada, diseño innovador y cero emisiones.</p>
                    <div class="hero-buttons d-flex flex-column flex-sm-row gap-2 gap-sm-3">
                        <a href="#vehiculos" class="btn btn-primary btn-lg">Ver Modelos</a>
                        <a href="#contacto" class="btn btn-outline-light btn-lg">Solicitar Cotización</a>
                    </div>
                </div>
                <div class="col-lg-6 electric-container">
                    <div class="energy-ring"></div>
                    <div class="lightning"></div>
                    <div class="lightning"></div>
                    <div class="lightning"></div>
                    <img src="/images/byd/byd-shark-new.webp" alt="BYD Shark" class="img-fluid hero-car floating" loading="lazy">
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section py-5">
        <div class="container">
            <div class="row text-center">
                <% stats.forEach(stat => { %>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-box">
                        <i class="<%= stat.icon %> fa-3x mb-3"></i>
                        <h3 class="counter" data-target="<%= stat.value %>">0</h3>
                        <p><%= stat.unit %></p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Vehicles Section -->
    <section id="vehiculos" class="vehicles-section py-5">
        <div class="container">
            <div class="section-header text-center mb-5">
                <h2 class="display-4 fw-bold">Nuestra Gama</h2>
                <p class="lead">Encuentra el BYD perfecto para ti</p>
            </div>
            
            <div class="row g-4">
                <% vehicles.forEach(vehicle => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="vehicle-card">
                        <div class="vehicle-image">
                            <img src="<%= vehicle.image %>" alt="BYD <%= vehicle.name %>" class="img-fluid" loading="lazy">
                            <% if (vehicle.badge) { %>
                            <div class="vehicle-badge <%= vehicle.badgeClass || '' %>"><%= vehicle.badge %></div>
                            <% } %>
                            <% if (vehicle.name === 'BYD King') { %>
                            <div class="vehicle-badge popular">Popular</div>
                            <% } %>
                        </div>
                        <div class="vehicle-info">
                            <h3><%= vehicle.name %></h3>
                            <p class="text-muted"><%= vehicle.description %></p>
                            <ul class="features-list">
                                <% vehicle.features.forEach((feature, index) => { %>
                                <li>
                                    <i class="<%= index === 0 ? 'fas fa-battery-three-quarters' : index === 1 ? 'fas fa-tachometer-alt' : 'fas fa-users' %>"></i> 
                                    <%= feature %>
                                </li>
                                <% }) %>
                            </ul>
                            <div class="row g-2 mt-3">
                                <div class="col-6">
                                    <button class="btn btn-primary w-100" onclick="openQuoteModal('<%= vehicle.name %>')">
                                        <%= vehicle.name === 'Shark' ? 'Reservar' : 'Cotizar' %>
                                    </button>
                                </div>
                                <div class="col-6">
                                    <% if (vehicle.name === 'BYD King' || vehicle.name === 'Dolphin Mini' || vehicle.name === 'BYD Shark' || vehicle.name === 'Seal' || vehicle.name === 'Sea Lion 7' || vehicle.name === 'Song Plus' || vehicle.name === 'Yuan Pro') { %>
                                        <button class="btn btn-success w-100" onclick="openVehicleDetails('<%= vehicle.name %>', '<%= vehicle.type || 'unknown' %>')">
                                            Ver Más
                                        </button>
                                    <% } else { %>
                                        <button class="btn btn-outline-secondary w-100" disabled>
                                            Próximamente
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>


    <!-- Savings Calculator Modal -->
    <div class="modal fade" id="savingsModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Calculadora de Ahorros - <span id="modalVehicleName">BYD King</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="savingsCalculator">
                        <input type="hidden" id="modalVehicleType" value="hybrid">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Kilómetros al año</label>
                                <input type="number" class="form-control" id="kmPerYear" value="20000" min="0">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Tipo de gasolina actual</label>
                                <select class="form-control" id="gasType">
                                    <option value="magna">Magna - $23.76/L</option>
                                    <option value="premium">Premium - $26.83/L</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Consumo actual (km/L)</label>
                                <input type="number" class="form-control" id="currentConsumption" value="12" min="1">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Consumo eléctrico de tu hogar (kWh/mes)</label>
                                <input type="number" class="form-control" id="homeConsumption" value="300" min="0">
                                <small class="form-text text-muted">Para calcular las tarifas CFE correctas</small>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg w-100 mt-4">Calcular Ahorros con Tarifas CFE</button>
                    </form>

                    <div id="savingsResult" class="savings-result mt-4" style="display: none;">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="result-box">
                                    <h4>Ahorro Anual</h4>
                                    <p class="result-value text-success">$<span id="annualSavings">0</span></p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="result-box">
                                    <h4>Ahorro en 5 años</h4>
                                    <p class="result-value text-success">$<span id="fiveYearSavings">0</span></p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="result-box">
                                    <h4>CO₂ Reducido/año</h4>
                                    <p class="result-value text-success"><span id="co2Reduction">0</span> kg</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Cálculos basados en:</strong> 
                                Tarifas CFE escalonadas reales, precios de gasolina Monterrey
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

