    <% if (vehicle.gallery && vehicle.gallery.length > 0) { %>
    <!-- Gallery Modal -->
    <div id="galleryModal" style="display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.95); z-index: 2000; justify-content: center; align-items: center;">
        <button onclick="closeGallery()" style="position: absolute; top: 2rem; right: 2rem; background: none; border: none; color: white; font-size: 2rem; cursor: pointer;">
            <i class="fas fa-times"></i>
